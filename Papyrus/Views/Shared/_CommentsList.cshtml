@model List<Papyrus.Models.Comment>

<h4>Комментарии</h4>
@if (Model.Count == 0)
{
    <p>Нет комментариев.</p>
}
else
{
    <ul class="list-group">
        @foreach (var comment in Model)
        {
            <li class="list-group-item">
                <strong>@comment.User.UserName</strong> (@comment.Date.ToShortDateString()):
                <p>@comment.Text</p>
            </li>
        }
    </ul>
}
